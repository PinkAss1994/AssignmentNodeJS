                <div class="pagination" style="margin-left:auto">
                    <% if (currentPage !== 1){ %>
                    <a href="/products/?page=<%= previousPage %>" class="prev-arrow"><i class="fa fa-long-arrow-left" aria-hidden="true"></i></a>
                    <% } %>
                    <% if(hasPreviousPage ){  %>
                        <a href="?page=<%= previousPage %>"><%= previousPage %></a>
                    <% } %>
                    <a  class="active" href="javascript:void(0)" tabindex="-1"><%= currentPage %></a>
                    <% if(hasNextPage){  %>
                        <a   href="?page=<%= nextPage %>"><%= nextPage %></a>
                    <% } %>
