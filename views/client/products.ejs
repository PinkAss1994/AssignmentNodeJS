            <!-- Start Best Seller -->
            <section class="lattest-product-area pb-40 category-list">
                <div class="row">
                    <% allProducts.forEach(function(prod) { %>
                        <% salePrice = prod.price - (prod.sale * prod.price) / 100 %>
                    <!-- single product -->
                    <div class="col-lg-4 col-md-6">
                        <div class="single-product">
                            <img class="img-fluid" src="/upload/<%=prod.images[0] %>" alt="<%= prod.name %>" style="width: 255px; height: 271px;">
                            <div class="product-details">
                                <h6><%= prod.name %></h6>
                                <div class="price">
                                    <% if(prod.sale ==0) { %>
                                        <h6>$ <%= prod.price %></h6>
                                            <% } else { %>
                                            <h6>$ <%= salePrice %></h6>
                                        <h6 class="l-through">$ <%= prod.price %></h6>
                                        <% } %>
                                </div>
                                <div class="prd-bottom">

                                    <a href="/add-to-cart/<%=prod.id%>" class="social-info">
                                        <span class="ti-bag"></span>
                                        <p class="hover-text">add to cart</p>
                                    </a>
                                    <a href="" class="social-info">
                                        <span class="lnr lnr-heart"></span>
                                        <p class="hover-text">Wishlist</p>
                                    </a>
                                    <a href="" class="social-info">
                                        <span class="lnr lnr-sync"></span>
                                        <p class="hover-text">compare</p>
                                    </a>
                                    <a href="/product/<%= prod.id %>" class="social-info">
                                        <span class="lnr lnr-move"></span>
                                        <p class="hover-text">view more</p>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
