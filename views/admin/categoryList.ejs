<div class="card">
  <h5 class="card-header"> Category list</h5>
  <div class="table-responsive text-nowrap">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>         
          <th>Name</th>
          <th>Status</th>
          <th>Products</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody class="table-border-bottom-0">
        <% if(category.length > 0) { %>
        <% for(let cate of category){ %>
          <tr>
            <td><%= cate.id %></td>
            <td><%= cate.name %></td>
            <% if(cate.status==1) { %>
            
            <td class="alert alert-success" role="alert"><span class="badge bg-label-primary me-1">Active</span></td>
            <% } else { %>
            <td class="alert alert-danger" role="alert"><span class="badge bg-label-primary me-1">DeActive</span></td>
            <%} %>
            <td><%= cate.product_id %></td>
            <td>
              <div class="dropdown">
                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                  <i class="bx bx-dots-vertical-rounded"></i>
                </button>
                <div class="dropdown-menu">
                  <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                  <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Delete</a>
                </div>
              </div>
            </td>
          </tr>
       <% } %>
      <% } else { %>
      <tr> No data found</tr>
        <% } %>
      
      </tbody>
    </table>
  </div>
</div>