<div class="card">
    <h5 class="card-header"> Products list</h5>
    <div class="table-responsive text-nowrap">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>ID</th>         
            <th>Name</th>
            <th>Images</th>
            <th>Price</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody class="table-border-bottom-0">
          <% var id=0 %>
          <% product.forEach(function(pro){ id ++ %>
            <tr>
              <td><%= id %></td>
              <td><%= pro.name %></td>
              
              <td> <% for(var i=0; i < pro.images.length; i++) { %>
                <img src="upload/<%= pro.images[i] %>"
                    width="100px" alt="loading image">
                <% } %></td>
                <td><%= pro.price %></td>
              <% if(pro.status==1) { %>
              
              <td class="alert alert-success" role="alert"><span class="badge bg-label-primary me-1">Active</span></td>
              <% } else { %>
              <td class="alert alert-danger" role="alert"><span class="badge bg-label-primary me-1">DeActive</span></td>
              <%} %>
             
              <td>
                <div class="dropdown">
                  <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                    <i class="bx bx-dots-vertical-rounded"></i>
                  </button>
                  <div class="dropdown-menu">
                    <a class="dropdown-item" href="/admin/update-product/<%=pro.id %>"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                    <a class="dropdown-item" href="/admin/delete-product/<%=pro.id %>"><i class="bx bx-trash me-1"></i> Delete</a>
                  </div>
                </div>
              </td>
            </tr>
         <% }) %>      
        </tbody>
      </table>
    </div>
  </div>

 
  
</div>
 <nav aria-label="Page navigation example" style="margin-top: 20px;">
								
    <ul class="pagination justify-content-center">
        <% if (currentPage !== 1){ %>
        <li class="page-item">
            <a class="page-link" href="admin/list-products/?page=<%= previousPage %>" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
              <span class="sr-only">Previous</span>
            </a>
        </li>
        <% } %>


      
      <% if(hasPreviousPage ){  %>
      <li class="page-item"><a class="page-link" href="admin/list-products/?page=<%= previousPage %>"><%= previousPage %></a></li>
      <% } %>

      <li class="page-item active"><a class="page-link" href="javascript:void(0)" tabindex="-1"><%= currentPage %></a></li>

      <% if(hasNextPage){  %>
        <li class="page-item"><a class="page-link" href="admin/list-products/?page=<%= nextPage %>"><%= nextPage %></a></li>
      <% } %>
      
      <% if(currentPage < lastPage){ %>
      <li class="page-item">
        <a class="page-link" href="admin/list-products/?page=<%= nextPage %>" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
          <span class="sr-only">Next</span>
        </a>
      </li>
      <% } %>

    </ul>
</nav>