<div class="card">
    <h5 class="card-header"> Products list</h5>
    <div class="table-responsive text-nowrap">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>ID</th>         
            <th>Name</th>
            <th>Images</th>
            <th>Price</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody class="table-border-bottom-0">
          <% var id=0 %>
          <% product.forEach(function(pro){ id ++ %>
            <tr>
              <td><%= id %></td>
              <td><%= pro.name %></td>
              
              <td> <% for(var i=0; i < pro.images.length; i++) { %>
                <img src="upload/<%= pro.images[i] %>"
                    width="100px" alt="loading image">
                <% } %></td>
                <td><%= pro.price %></td>
              <% if(pro.status==1) { %>
              
              <td class="alert alert-success" role="alert"><span class="badge bg-label-primary me-1">Active</span></td>
              <% } else { %>
              <td class="alert alert-danger" role="alert"><span class="badge bg-label-primary me-1">DeActive</span></td>
              <%} %>
             
              <td>
                <div class="dropdown">
                  <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                    <i class="bx bx-dots-vertical-rounded"></i>
                  </button>
                  <div class="dropdown-menu">
                    <a class="dropdown-item" href="/admin/update-product/<%=pro.id %>"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                    <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Delete</a>
                  </div>
                </div>
              </td>
            </tr>
         <% }) %>      
        </tbody>
      </table>
    </div>
  </div>